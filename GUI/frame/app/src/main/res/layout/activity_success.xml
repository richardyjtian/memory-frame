<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgSuccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lbackground"
    tools:context=".SuccessActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="248dp"
        android:text="sign up successfully"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="@+id/bgSuccess"
        app:layout_constraintStart_toStartOf="@+id/bgSuccess"
        app:layout_constraintTop_toTopOf="@+id/bgSuccess" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="303dp"
        android:layout_height="49dp"
        android:layout_marginTop="400dp"
        android:background="#FF6666"
        android:text="start creating your first frame"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/bgSuccess"
        app:layout_constraintStart_toStartOf="@+id/bgSuccess"
        app:layout_constraintTop_toTopOf="@+id/bgSuccess" />


</android.support.constraint.ConstraintLayout>