<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BTActivity"
    android:background="@drawable/lbackground">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/upperwindow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#00000000">

        <ImageView
            android:id="@+id/figure"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/mflogo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintTop_toBottomOf="@id/figure"
            android:text="linlin"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.5" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btwindow"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upperwindow"
        app:layout_constraintVertical_bias="1.0"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="@id/btwindow"
            android:textSize="24sp"
            android:onClick="clickText"
            android:text="pair with your photo frame"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/btlist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="@id/btwindow"
            app:layout_constraintHeight_percent="0.85"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@id/btwindow"
            app:layout_constraintRight_toRightOf="@id/btwindow"
            app:layout_constraintTop_toBottomOf="@id/instruction"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottomwindow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/baseline_home_black_48dp"
            app:layout_constraintBottom_toBottomOf="@id/bottomwindow"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/bottomwindow"
            app:layout_constraintRight_toRightOf="@id/bottomwindow"
            app:layout_constraintTop_toTopOf="@id/bottomwindow"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/frame"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/outline_filter_frames_black_48dp"
            app:layout_constraintBottom_toBottomOf="@id/bottomwindow"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintLeft_toLeftOf="@id/bottomwindow"
            app:layout_constraintRight_toRightOf="@id/bottomwindow"
            app:layout_constraintTop_toTopOf="@id/bottomwindow"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/outline_settings_black_48dp"
            app:layout_constraintBottom_toBottomOf="@id/bottomwindow"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintLeft_toLeftOf="@id/bottomwindow"
            app:layout_constraintRight_toRightOf="@id/bottomwindow"
            app:layout_constraintTop_toTopOf="@id/bottomwindow"
            app:layout_constraintVertical_bias="0.5" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
